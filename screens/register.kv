MDScreen:
    name:"register"
    MDFloatLayout:
        md_bg_color: 1,1,1,1
        MDIconButton:
            icon: "chevron-left"
            user_font_size: "30sp"
            pos_hint: {'center_y': .95}
            on_release:
                root.manager.transition.direction= "right"
                root.manager.current= "main"
        MDLabel:
            text:"back"
            font_size: "15sp"
            pos_hint: {'center_x':.615, 'center_y':.949}
        Image:
            source: "images/register.png"
            size_hint:  1, .85
            pos_hint: {'center_x': .5, 'center_y': .75}
        MDLabel:
            text: "H E Y! \n Register yourself here"
            font_size: "23sp"
            pos_hint: {'center_y': .44}
            halign: "center"
            color: rgba(34,34,34,255)
        Button:
            text: "AS CUSTOMER"
            size_hint: .66, .065
            pos_hint: {'center_x': .5,'center_y': .28}
            background_color: 0,0,0,0
            color: rgba(0,128,0,255)
            on_release:
                root.manager.transition.direction= "left"
                root.manager.current= "reg_cust"
            canvas.before:
                Color:
                    rgb: rgba(0,128,0,255)
                Line:
                    width: 1.2
                    rounded_rectangle: self.x, self.y, self.width, self.height, 5,5,5,5,100
        Button:
            text: "AS VENDOR"
            size_hint: .66, .065
            pos_hint: {'center_x': .5,'center_y': .18}
            background_color: 0,0,0,0
            color: rgba(0,128,0,255)
            on_release:
                root.manager.transition.direction= "left"
                root.manager.current= "reg_user"
            canvas.before:
                Color:
                    rgb: rgba(0,128,0,255)
                Line:
                    width: 1.2
                    rounded_rectangle: self.x, self.y, self.width, self.height, 5,5,5,5,100
