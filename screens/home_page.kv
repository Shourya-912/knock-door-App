MDScreen:
    name:"main"
    MDFloatLayout:
        md_bg_color: 1,1,1,1

        Image:
            source: "images/main.jpg"
            size_hint: 1, .8
            pos_hint: {'center_x': .5, 'center_y': .8}
        MDLabel:
            text: "H e l l o  !"
            font_size: "23sp"
            pos_hint: {'center_y': .53}
            halign: "center"
            color: rgba(34,34,34,255)
        MDLabel:
            text: "Best and virtual place for vendors/garbage \n vehicles  and customers to communicate \ndirectly from a long distance."
            font_size: "13sp"
            pos_hint: {'center_X': .3, 'center_y': .43}
            halign: "center"
            color: rgba(127,127,127,255)
        Button:
            text: "LOGIN"
            size_hint: .66, .065
            pos_hint: {'center_x': .5,'center_y': .3}
            background_color: 0,0,0,0
            on_release:
                root.manager.transition.direction= "left"
                root.manager.current= "login"
            canvas.before:
                Color:
                    rgb: rgba(52,0,231,255)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [5]
        Button:
            text: "REGISTER"
            size_hint: .66, .065
            pos_hint: {'center_x': .5,'center_y': .2}
            background_color: 0,0,0,0
            color: rgba(0,128,0,255)
            on_release:
                root.manager.transition.direction= "left"
                root.manager.current= "register"
            canvas.before:
                Color:
                    rgb: rgba(0,128,0,255)
                Line:
                    width: 1.2
                    rounded_rectangle: self.x, self.y, self.width, self.height, 5,5,5,5,100
